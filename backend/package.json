{
  "name": "@pets/backend",
  "private": "true",
  "version": "0.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "test": "jest --runInBand",
    "build-emails": "rimraf src/emails/dist && mkdirp src/emails/dist && mjml src/emails/[!_]*.mjml -o src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pmt": "dotenv -e ./.env.test prisma migrate deploy",
    "pmp": "dotenv -e ./.env.production prisma migrate deploy",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --loglevel warn --cache --write \"{src/**/*,*}.{ts,tsx,js,json,yml,scss}\"",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@pets/shared": "workspace:*",
    "@pets/webapp": "workspace:*",
    "@prisma/client": "^6.10.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.36.0",
    "@trpc/server": "10.37.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "marked": "^16.0.0",
    "micromatch": "^4.0.8",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "prisma": "^6.10.1",
    "react-router-dom": "^7.6.1",
    "serialize-error": "8.1.0",
    "superjson": "^2.2.2",
    "triple-beam": "^1.4.1",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@sentry/types": "^9.37.0",
    "@types/cors": "^2.8.18",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.17",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.15.23",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint-plugin-node": "^11.1.0",
    "trpc-playground": "^1.0.4"
  }
}