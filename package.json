{
  "name": "pets",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @pets/backend",
    "w": "pnpm --filter @pets/webapp",
    "sh": "pnpm --filter @pets/shared",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "build": "pnpm w build && pnpm b build",
    "types": "concurrently \"pnpm b types\" \"pnpm w types\" \"pnpm sh types\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm w lint\" \"pnpm sh lint\"",
    "prettify": "pnpm -r --parallel prettify",
    "dcc": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose config",
    "dcb": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose build",
    "dcu": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose up",
    "prepare": "husky"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "rimraf": "2.7.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "typescript-transform-paths": "^3.5.5",
    "vite": "^7.0.5"
  },
  "overrides": {
    "eslint": "9.27.0",
    "@trpc/server": "10.37.0",
    "@trpc/client": "10.37.0",
    "@trpc/react-query": "10.37.0",
    "vite": "^7.0.5"
  }
}